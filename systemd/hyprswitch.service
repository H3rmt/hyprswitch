[Unit]
Description=Starts hyprswitch Daemon
Requires=hyprswitch.socket
After=hyprswitch.socket
StartLimitIntervalSec=600
StartLimitBurst=8

[Service]
Type=simple
ExecStart=/home/user/RustroverProjects/hyprswitch/target/target/hyprswitch -vv init --show-title --size-factor 5.5 --workspaces-per-row 4
Restart=always
RestartSec=10
TimeoutSec=5

Environment="LAUNCHER_MAX_ITEMS=5"
Environment="SHOW_LAUNCHER=false"
